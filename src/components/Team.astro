---
const teamMembers = [
  {
    name: 'Evandro Pires',
    role: 'Líder do evento',
    linkedin: 'https://www.linkedin.com/in/epiresdasilva/',
    image: '/foto-evandro.jpg',
  },
  {
    name: 'Madilene da Silveira',
    role: 'Organização',
    linkedin: 'https://www.linkedin.com/in/madilene-silva-1530261b7/',
    image: '/foto-madilene.jpg',
  },
  {
    name: 'Willian Peixoto',
    role: 'Organização',
    linkedin: 'https://www.linkedin.com/in/peixotowill/',
    image: '/foto-will.jpeg',
  },
  // Adicione mais membros conforme necessário
]
---

<section class="mb-32 mt-32">
  <div class="container">
    <h2 class="mb-16 text-6xl">Time da organização</h2>
    <div class="grid grid-cols-1 gap-12 sm:grid-cols-2 md:grid-cols-4">
      {
        teamMembers.map((member) => (
          <div class="center text-center" key={member.name}>
            <div class="foto">
              <a href={member.linkedin} target="_blank">
                <img src={member.image} alt={`Foto de ${member.name}`} />
              </a>
            </div>
            <p class="text-2xl font-semibold">{member.name}</p>
            <p class="text-1xl">{member.role}</p>
          </div>
        ))
      }
    </div>
  </div>

  <style lang="scss">
    .foto {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 16em;
      width: 16em;
      padding: 0.5em;
      overflow: hidden;
      border-radius: 50%;
      background-color: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .foto img {
      height: 100%;
      width: 100%;
      object-fit: cover;
      border-radius: 50%;
    }
    .center {
      display: grid;
      justify-content: center;
    }
  </style>
</section>
